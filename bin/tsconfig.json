{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    "useDefineForClassFields": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "../ts-dist/bin",
    "incremental": true,
    "types": [
      "node",
      "vite/client"
    ]
  },
  "include": [
    "opcodes/**/*.mts",
    "build-verify.mjs",
    "clean.mjs",
    "patch-all.mjs",
    "run-browserstack-tests.mjs",
    "run-node-tests.mjs",
    "run-tests.mjs",
    "run-types-tests.mjs",
    "setup-bench.mjs",
    "sync-npm-owners.mjs",
    "link-all.mts",
    "opcodes.mts",
    "packages.mts",
    "published-packages.mts",
    "unlink-all.mts",
    "update-package-json.mts"
  ],
  "references": [
    {
      "path": "../packages/@types/puppeteer-chromium-resolver/tsconfig.json"
    }
  ]
}
