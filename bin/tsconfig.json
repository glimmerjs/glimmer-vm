{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    "useDefineForClassFields": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "../ts-dist/bin",
    "incremental": true,
    "types": [
      "@glimmer-workspace/env",
      "node"
    ]
  },
  "include": [
    "opcodes/**/*.mts",
    "benchmark/**/*.mjs",
    "benchmark/**/*.d.ts",
    "*.mjs",
    "*.mts"
  ],
  "references": [
    {
      "path": "../packages/@glimmer-workspace/env/tsconfig.json"
    },
    {
      "path": "../packages/@types/puppeteer-chromium-resolver/tsconfig.json"
    }
  ]
}
