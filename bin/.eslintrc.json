// node files
{
  "root": false,
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": ["bin/tsconfig.json"]
  },
  "extends": ["plugin:@typescript-eslint/recommended"],

  "rules": {
    "dot-notation": "off",
    "no-console": "off",
    "n/no-unsupported-features/es-syntax": [
      "error",
      {
        "ignores": [],
        "version": ">=16.0.0"
      }
    ],
    "n/shebang": "off"
  }
}
