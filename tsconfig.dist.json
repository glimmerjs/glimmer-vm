{
  "compilerOptions": {
    "composite": false,
    "outDir": "ts-dist/dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    "useDefineForClassFields": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@glimmer/interfaces": ["./packages/@glimmer/interfaces/index.d.ts"],
      "@glimmer/*": ["./packages/@glimmer/*/dist/dev/index.d.ts"]
    }
  },
  "include": ["packages/@glimmer/*/dist/**/*.d.ts"],
  "exclude": [
    "@types/**",
    "packages/@glimmer/constants/**",
    "packages/@glimmer/debug/**",
    "packages/@glimmer/debug-util/**",
    "packages/@glimmer/local-debug-flags"
  ]
}
