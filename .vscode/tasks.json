{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "pnpm",
      "args": [
        "dotenv",
        "--",
        "turbo",
        "lint"
      ],
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "label": "turbo: lint",
      "detail": "dotenv -- turbo lint"
    },
    {
      "type": "npm",
      "script": "lint:types:watch",
      "detail": "Check Types in the background",
      "isBackground": true,
      "runOptions": {
        "instanceLimit": 1,
        "reevaluateOnRerun": true,
        "runOn": "default"
      },
      "problemMatcher": [
        "$tsc-watch"
      ],
      "group": "build",
      "label": "Watch Types"
    },
    {
      "type": "npm",
      "script": "lint:types",
      "problemMatcher": [
        "$tsc"
      ],
      "label": "npm: lint:types",
      "detail": "x-env tsc -b --noEmit"
    }
  ]
}
