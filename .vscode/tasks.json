{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["dotenv", "--", "turbo", "lint"],
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "label": "turbo: lint",
      "detail": "dotenv -- turbo lint"
    },
    {
      "label": "Check Types in the background",
      "detail": "pnpm lint:types:watch",
      "type": "npm",
      "script": "lint:types:watch",
      "isBackground": true,
      "runOptions": {
        "instanceLimit": 1,
        "reevaluateOnRerun": true,
        "runOn": "default"
      },
      "problemMatcher": ["$tsc-watch"],
      "group": "build"
    },
    {
      "label": "Type Check",
      "detail": "pnpm lint:types",
      "type": "npm",
      "script": "lint:types",
      "problemMatcher": ["$tsc"]
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "label": "npm: lint",
      "detail": "x-env turbo lint --concurrency=\\$TURBO_CONCURRENCY --color"
    }
  ]
}
