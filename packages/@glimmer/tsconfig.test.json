{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable",
      "ES2015.Iterable"
    ],
    "allowJs": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "..",
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "useDefineForClassFields": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "skipDefaultLibCheck": true,
    "types": [
      "qunit",
      "node",
      "vite/client"
    ]
  },
  "include": [
    "*/test/**/*"
  ],
  "exclude": [
    "*/test/node_modules",
    "**/fixtures",
    "**/vm-babel-plugins/**",
  ],
  "references": [
    {
      "path": "../@glimmer-workspace/tsconfig.json"
    }
  ]
}
