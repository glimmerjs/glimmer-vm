{
  "name": "@glimmer/destroyable",
  "version": "0.93.1",
  "license": "MIT",
  "description": "Utilities for creating and managing a destroyable hierarchy of objects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glimmerjs/glimmer-vm.git",
    "directory": "packages/@glimmer/destroyable"
  },
  "type": "module",
  "exports": "./index.ts",
  "publishConfig": {
    "access": "public",
    "files": [
      "dist"
    ],
    "exports": {
      ".": {
        "default": {
          "development": {
            "types": "./dist/dev/index.d.ts",
            "default": "./dist/dev/index.js"
          },
          "default": {
            "types": "./dist/prod/index.d.ts",
            "default": "./dist/prod/index.js"
          }
        }
      }
    }
  },
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "test:lint": "eslint .",
    "test:publint": "publint",
    "test:types": "tsc --noEmit -p ./tsconfig.json"
  },
  "dependencies": {
    "@glimmer/global-context": "workspace:*",
    "@glimmer/interfaces": "workspace:*",
    "@glimmer/state": "workspace:*"
  },
  "devDependencies": {
    "@glimmer-workspace/build-support": "workspace:*",
    "@glimmer-workspace/eslint-plugin": "workspace:*",
    "@glimmer/debug-util": "workspace:*",
    "@types/qunit": "catalog:",
    "eslint": "catalog:",
    "publint": "catalog:",
    "rollup": "catalog:",
    "typescript": "catalog:"
  }
}
