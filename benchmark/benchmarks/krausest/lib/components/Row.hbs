<tr class={{if @item.selected "danger"}}>
  <td class="col-md-1">{{@item.id}}</td>
  <td class="col-md-4"><a {{on "click" this.onSelect}}>{{@item.label}}</a></td>
  <td class="col-md-1"><a><span
        class="glyphicon glyphicon-remove"
        aria-hidden="true"
      ></span></a></td>
  <td class="col-md-6"></td>
</tr>