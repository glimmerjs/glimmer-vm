{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "module": "es2015",
    "typeRoots": [],
    "types": [],
    "baseUrl": ".",
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "benchmark/**/*",
    "build/**/*",
    "bin/**/*",
    "lib/**/*",
    "server/**/*",
    "packages/build-utils/@glimmer/**/*",
    "./*.js"
  ],
  "exclude": ["**/fixtures/**/*"]
}
