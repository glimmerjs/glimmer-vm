{
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        "declaration": true,
        "rootDir": "packages",
        "baseUrl" : "./packages",
        "newLine": "LF",
        "noEmit": true
    },
    "include":[
        "packages/benchmark/*",
        "packages/qunit/*",
        "packages/*/index.ts",
        "packages/*/tests/*.ts",
        "packages/*/tests/**/*.ts"
    ],
    "exclude": [
        "dist",
        "tmp",
        "tmp_old",
        "node_modules"
    ]
}
