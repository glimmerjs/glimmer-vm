{
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "declaration": true,
        "rootDir": "packages",
        "baseUrl" : "./packages",
        "newLine": "LF",
        "noEmit": true
    },
    "include": [
      "packages/*/*.d.ts",
      "packages/*/index.ts",
      "packages/*/lib/**.ts",
      "packages/@glimmer/*/*.d.ts",
      "packages/@glimmer/*/index.ts",
      "packages/@glimmer/*/lib/**.ts"
    ],
    "exclude": [
        "dist",
        "demos",
        "tmp",
        "node_modules",
        ".vscode"
    ]
}
