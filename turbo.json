{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml",
    "patches",
    ".env",
    ".env.testing",
    ".eslintignore",
    ".prettierrc.json",
    ".eslintrc.cjs",
    "rollup.config.mjs",
    "vite.config.mts",
    ".github/workflows/ci.yml",
    "tsconfig.json",
    "tsconfig.dist.json",
    "*/tsconfig.json",
    "packages/*/tsconfig.json",
    "packages/@glimmer/.eslintrc.cjs",
    "packages/@glimmer-workspace/.eslintrc.cjs",
    "packages/@glimmer-workspace/eslint-plugin/**/*",
    "packages/@glimmer-workspace/build/lib/config.js"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [],
      "outputs": ["dist/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "cache": false,
      "env": [],
      "dependsOn": ["test:lint", "test:publint"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"]
    },
    "test:lint": {
      "env": [],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"]
    },
    "test:publint": {
      "env": [],
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"]
    },
    "//#test:types": {
      "env": [],
      "inputs": ["**/dist/**", "tsconfig.dist.json", ".env", ".env.local"],
      "dependsOn": ["^build"]
    }
  }
}
