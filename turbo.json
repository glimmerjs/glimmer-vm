{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [],
  "tasks": {
    "build": {
      "dependsOn": ["//#update:meta"],
      "inputs": ["$TURBO_DEFAULT$", "package.json", "index.ts", "lib/**"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "cache": false,
      "dependsOn": ["test:lint", "test:publint", "test:types"]
    },
    "test:lint": {},
    "test:types": {},
    "test:publint": {
      "dependsOn": ["build"]
    },
    "lint:types": {},
    "//#update:meta": {
      "inputs": ["**/package.json"]
    },
    "//#test:published:types": {
      "inputs": ["**/dist/**"],
      "dependsOn": ["^build"]
    }
  }
}
